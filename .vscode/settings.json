{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "biome.enabled": true,
  // "biome.lsp.bin": "node_modules/@biomejs/biome/bin/biome",
  "biome.lsp.trace.server": "off",
  "editor.codeActionsOnSave": {
    "source.action.useSortedKeys.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "[css][javascript][javascriptreact][json][jsonc][typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "eslint.enable": false,
  "prettier.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.fontFamily": "Fira Code",
  "tailwindCSS.classAttributes": ["class", "className"],
  "tailwindCSS.classFunctions": [
    "clsx",
    "classNames",
    "classnames",
    "tw",
    "tv",
    "twMerge",
    "twJoin"
  ],
  "markdown-preview-github-styles.colorTheme": "auto",
  "markdown-preview-github-styles.lightTheme": "light"
}
